        jobArr: [], // 当前选中合作社下的身份数组

        workerAllJobArr: [], // 所有合作社及身份二维数组

        selectCooperaId: '',// 选择的合作社Id
        selectCooperaName: '', // 选择的合作社名称

        selectPostId: '', // 选择的身份id
        selectPostName: '', // 选择的身份昵称
        selectId: '', //选择的用户id
        selectJobId: '', //选择的jobid

        source: '', // 当前页面来源  ''-登录来源 'navMenu'-从页面内切换身份按钮跳转

