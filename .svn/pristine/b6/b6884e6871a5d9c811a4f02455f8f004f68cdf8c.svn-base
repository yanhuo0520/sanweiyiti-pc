      width: 20vw;
      height: 28vw;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 0 8px #000;
      padding: 1vw 1.2vw; 
      .login-tit {
        color: #4e535f;
        font-weight: bold;
        font-size: 1vw;
        padding-top: 0.9vw;
        padding-bottom: 2vw;
      }
      .login-form-con {
        .el-form-item {
          margin-bottom: 1.8vw;
        }
        .form-item-con {
          display: flex;
          align-items: center;
