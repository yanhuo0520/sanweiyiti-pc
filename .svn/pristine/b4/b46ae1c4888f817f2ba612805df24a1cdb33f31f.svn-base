<template>
    <div class="banner-list"  v-loading="loading">
		<div class="breadcrumb-con">
			<img class="left-icon" src="../../images/breadcrumb-left-icon.png" alt="">
			<div class="breadcrumb-info">
				<el-breadcrumb separator-class="el-icon-arrow-right">
					<el-breadcrumb-item>供应商城</el-breadcrumb-item>
					<el-breadcrumb-item  class="breadcrumb-tit">轮播设置</el-breadcrumb-item>
				</el-breadcrumb>
			</div>
			<el-button size="small" @click="initData()">刷新</el-button>
		</div>
		<div class="operate-con clearfix">
            <div class="search-con"></div>
            <div class="btn-con" v-if="!loading">
				<el-button slot="trigger" size="small"  type="primary" v-if="isAdd"  @click="addBanner()">添加轮播图</el-button>
			</div>
        </div>
        <div class="table-con">
            <template v-if="data && data.length > 0">
                <el-table :data="data" border >
                    <el-table-column  label="图片" align="center" >
                        <template slot-scope="scope">
                            <span style="color:#3a8ee6;cursor:pointer" @click="showImgView(scope.row.value)" >查看图片</span>
                        </template>
                    </el-table-column>
                    <!-- <el-table-column prop="goods_name" label="商品名称" align="center"></el-table-column> -->
                    <el-table-column prop="goods_id" label="商品ID" align="center" ></el-table-column>
                     <el-table-column prop="update_time" label="添加时间" align="center" ></el-table-column>
                    <el-table-column label="操作" align="center" v-if="isEdit || isDel">
                        <template slot-scope="scope">
                            <el-button type="primary" size="small" v-if="isEdit"  @click="editBanner(scope.row)">编辑</el-button>
                            <el-button type="danger" size="small" v-if="isDel" @click="delBanner(scope.row,scope.$index)">删除</el-button>
                        </template>
                    </el-table-column>
                </el-table>
            </template>
            <template v-if="!data || data.length == 0">
                <div class="no-data-con" >
                    <div class="absolute-center">
                        <div class="err-info-text ">暂无轮播图</div>
                    </div>
                </div>
            </template>
        </div>
         <template v-if="showViewer">
            <el-image-viewer :on-close="closeImgView"  :url-list="showViewImgs" />
        </template> 
        <el-dialog :title="(picForm.id ? '编辑' : '添加') + '轮播图'" :visible.sync="picDialog" :close-on-click-modal="false" :close-on-press-escape="false">
			<el-form ref="picForm" :model="picForm" :rules="picRules" label-width="60px">
                <el-form-item label="图片" prop="pic_url">
                    <el-upload class="avatar-uploader" action="http://coopera.xfd365.com/user/auth/uploadImg" :disabled="uploading" :show-file-list="false" accept="image/*" :on-success="handlePicSuccess" :before-upload="beforePicUpload" :on-error="handlePicErr">
                        <template v-if="uploadSuccess">
                            <img  :src="picForm.pic_url" class="avatar">
                        </template>
                        <template v-else>
                            <div class="avatar"  v-if="uploading">
                                <span class="avatar-absolute">上传中</span>
                            </div>
                             <div class="avatar"  v-if="uploadErr">
                                <span class="avatar-absolute">重新上传</span>
                            </div>
                            <i v-if="!uploading && !uploadErr" class="el-icon-plus avatar-uploader-icon"></i>
                        </template>
                    </el-upload>
                </el-form-item>
				<el-form-item label="链接" prop="goods_id">
					<el-input v-model="picForm.goods_id" placeholder="请输入商品ID"></el-input>
				</el-form-item>
			</el-form>
			<div slot="footer" class="dialog-footer">
				<el-button @click="picDialog = false">取 消</el-button>
				<el-button type="primary" @click="submitForm('picForm')" :loading="submitLoading">确 定</el-button>
			</div>
		</el-dialog>
    </div>
</template>
<script>
import ElImageViewer from 'element-ui/packages/image/src/image-viewer'
export default {
  name: "bannerList",
  data() {
    return {
      data: [],

      picForm: {
          pic_url: '',
          goods_id: ''
      },
      picRules: {
        pic_url: [
            { required: true, message: '请上传图片', trigger: 'change' }
        ], 
        goods_id: [
            { required: true,  message: '请输入商品id', trigger: 'blur' }
        ]
      },

      showViewer: false,
      showViewImgs: [],

      picDialog: false,
      submitLoading: false,

      uploading: false,
      uploadErr: false,
      uploadSuccess: false,

      loading: false,
      
      isEdit: false, //是否有编辑权限
      isDel: false, //是否有删除权限
      isAdd: false, //是否有添加权限
    };
  },
  components: { ElImageViewer },
  activated() {
      this.initData()
      this.handlePermission()
  },	
  methods: {
	// 初始化信息
	initData() {
      this.data = []
      this.uploading = false
      this.uploadErr = false
      this.uploadSuccess = false
      this.showViewer = false
      this.showViewImgs = []
      this.picDialog = false
      this.submitLoading = false
      this.loading = false
	  this.getPicLists()
    },
    // 判断当前页面都有什么权限
	handlePermission() { 
		let that = this;
		that.utils.getPermissionList(that,data =>{
			data.forEach(item =>{
				if(item.title == '编辑') {
					that.isEdit = true
                }	
                if(item.title == '删除') {
					that.isDel = true
                }	
                if(item.title == '添加') {
					that.isAdd = true
				}	
			})
		})
	},
	// 获取轮播图列表
	getPicLists(isAddEdit) {
        let that = this
        if(isAddEdit) {
            that.loading = false
        } else {
            that.loading = true;
        }
		that.ajax('picLists',{},'获取轮播图失败',res =>{
			that.loading = false
			if(res.errno == 0) {
				that.data = res.data.data
			}
		}, err =>{
			that.loading = false
		})
    },
   
    // 上传图片之前
    beforePicUpload(file) {
      const fileType = file.type;
      const fileSize = file.size / 1024 / 1024 < 10;
      if (
        fileType.search("jpg") < 0 &&
        fileType.search("jpeg") < 0 &&
        fileType.search("png") < 0 &&
        fileType.search("JPG") < 0 &&
        fileType.search("PNG") < 0
      ) {
        this.$message.error("图片类型必须是jpeg,jpg,png中的一种");
        return false;
      }
      this.uploading = true
      this.uploadErr = false
      this.uploadSuccess = false
    },
    // banner上传成功
    handlePicSuccess(res, file) {
      this.uploading = false
      this.uploadErr = false
      if (res.errno == 0) {
        let that = this
        this.picForm.pic_url = res.data.url;
        this.$forceUpdate()
        this.uploadSuccess = true
        this.$message.success("上传成功");
      } else {
        this.uploadErr = false
        this.$message.error(res.errMsg);
      }
    },
    // banner上传失败
    handlePicErr() {
        this.uploading = false
        this.uploadErr = true
        this.uploadSuccess = false
        this.picDialog = false
        this.$message.error("上传失败");
    },
     // 添加轮播图
    addBanner() {
         this.picForm = {
            pic_url: '',
            goods_id: '',
        }
        this.uploadSuccess = false
        this.picDialog = true
       
    },
    // 编辑轮播图
    editBanner(row) {
        this.picForm = {
            pic_url: row.value,
            goods_id: row.goods_id,
            id: row.id
        }
         this.uploadSuccess = true
        this.picDialog = true
    },
    // 删除轮播图
    delBanner(row,index) {
        let that = this
         that.$confirm('此操作将永久删除该轮播图, 是否继续?', '提示', {
          confirmButtonText: '确定',
          cancelButtonText: '取消',
          type: 'warning'
        }).then(() => {
            that.ajax('shopPicDel',{
                id: row.id,
            },'删除失败',res =>{
                if(res.errno == 0) {
                    that.$message.success('删除成功')
                    that.data.splice(index,1)
                }
            })
        }).catch(() => { });
		
    },
    // 提交添加修改form
    submitForm(formName) {
        let that = this
        that.$refs[formName].validate((valid) => {
          if (valid) {
			  that.submitLoading = true
			  let params = JSON.parse(JSON.stringify(that.picForm))
              that.ajax(params.id ? 'shopPicUpdate' : 'shopPicAdd',params,(params.id ? '编辑' : '添加') +'轮播图失败',res =>{
                that.submitLoading = false
                if(res.errno == 0) {
                    that.$message.success((params.id ? '编辑' : '添加')+'轮播图成功')
                    that.getPicLists(true)
                    that.picDialog = false
                }
              }, err =>{
                   that.submitLoading = false
              })
          } else {
            setTimeout(()=>{
                let isError= document.getElementsByClassName("is-error");
                let firstErrInput = isError[0].querySelector('input')
				firstErrInput.focus();
            },100);
            return false;
          }
        });
    },
    // 显示图片大图
    showImgView(url) {
        if(url) {
            this.showViewer = true
            this.showViewImgs = [url]
        }
    },
    // 关闭显示大图
	closeImgView() {
		this.showViewer = false
		this.showViewImgs = []
	},
  }
};
</script>
